<Page x:Class="LumbApp.GUI.SimulacionModoGuiado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:LumbApp.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1420"
      Title="LumbApp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Titulo-->
        <Border Grid.Row="0"  Grid.Column="0" Height="35" Width="637" Padding="5" Background="#4E87D4" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,310.2,0" Grid.ColumnSpan="2">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="White"></Label>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Height="35" Width="800" Padding="5" Background="#4E87D4" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="White" FontSize="16" Height="53" Margin="317.2,-4.8,319.2,-22.6">Simulación en Curso</Label>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Height="35" Width="636" Padding="5" Background="#4E87D4" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="310.4,0,0.8,0" Grid.ColumnSpan="2">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="White"></Label>
        </Border>

        <!--Etiquetas Manos-->

        <Label Grid.Row="1" Grid.Column="2" Name="ManoIzqLabel"
               VerticalAlignment="Center" HorizontalAlignment="Left"
               Foreground="#323232" Background="AliceBlue"
               Height="50" Width="220" Padding="5" Margin="10,10,0,8"
               FontSize="25" FontWeight="DemiBold"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        Izquierda
        </Label>
        <Label Grid.Row="1" Grid.Column="2" x:Name="ManoDerLabel"
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Foreground="#323232" Background="AliceBlue"
               Height="50" Width="220" Padding="5" Margin="0,10,10,8"
               FontSize="25" FontWeight="DemiBold"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
        Derecha
        </Label>
        <!--Manos-->
        <Image Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" 
               Name="ManoIzquierda" Height="300" Width="230"  
               HorizontalAlignment="Right" Margin="0,0,15,0">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" 
               Name="ManoDerecha"  Height="300" Width="230"  
               HorizontalAlignment="Right"/>
        <!--Source="C:\Users\LaraJazminCavicchiol\Documents\Proyecto\estados-manos\traqueada\mano-fuera-inicial.png"-->
        <!-- View report button -->
        <Button Grid.Row="0" Grid.Column="0" Name="FinalizarSimulacion" 
                Height="66" Width="402" Padding="5" 
                HorizontalAlignment="Left" VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                Background="#4E87D5" Foreground="White" 
                FontSize="26" FontWeight="Bold"
                Click="FinalizarSimulacion_Click" Margin="35,65,0,0">
            Finalizar Simulación
        </Button>
    </Grid>
</Page>
