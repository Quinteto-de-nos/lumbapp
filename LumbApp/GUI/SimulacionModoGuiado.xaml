<Page x:Class="LumbApp.GUI.SimulacionModoGuiado"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:local="clr-namespace:LumbApp.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1420"
      Title="LumbApp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--Titulo-->
        <Border Grid.Row="0"  Grid.Column="0" Height="35" Width="637" Padding="5" Background="#4E87D4" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,310.2,0" Grid.ColumnSpan="2">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="White"></Label>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Height="35" Width="800" Padding="5" Background="#4E87D4" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,0">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="White" FontSize="16" Height="53" Margin="317.2,-4.8,319.2,-22.6">Simulación en Curso</Label>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" Height="35" Width="636" Padding="5" Background="#4E87D4" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="310.4,0,0.8,0" Grid.ColumnSpan="2">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center"  Foreground="White"></Label>
        </Border>
        <!--Manos-->
        <Image Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Name="ManoIzquierda" Height="300" Width="230"  HorizontalAlignment="Right" Margin="0,5.4,6.4,0.2">
            <Image.RenderTransform>
                <ScaleTransform ScaleX="-1"/>
            </Image.RenderTransform>
        </Image>
        <Image Grid.Row="2" Grid.Column="2" Grid.RowSpan="2" Name="ManoDerecha"  Height="300" Width="230"  HorizontalAlignment="Right"/>

        <!-- View report button -->
        <!--
        <Button Name="RetryButton" Grid.Column="0" Grid.Row="2" Margin="0,363,342.6,32" Width="125" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center" Click="RetryButton_Click">Reintentar</Button>-->
    </Grid>
</Page>
