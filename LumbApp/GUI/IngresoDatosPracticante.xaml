      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LumbApp.GUI" 
      xmlns:valRule="clr-namespace:LumbApp.GUI.UserDataValidations" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LumbApp">
