    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border  Grid.Row="0" Height="auto" Width="800" Padding="5" Background="#4E87D4" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="White" Height="35" Margin="5.2,0" Width="780">Ingrese sus datos</Label>
        </Border>

        <!--Nombre-->
        <Border Grid.Row="2" Height="26" Width="500" Background="#91c0ff" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="White">Ingrese su Nombre</Label>
        </Border>

        <TextBox Name="Nombre"  TextChanged="ValidarNombre"
            Grid.Row="3"  Height="28" Width="500" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Bottom" Padding="20,0,0,0" VerticalContentAlignment="Center"/>
        <Label Name="ErrorNombre" Grid.Row="4" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Foreground="Red" Margin="160,0,0,0"></Label>

        <!--Apellido-->
        <Border Grid.Row="5" Height="26" Width="500" Background="#91c0ff" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="White">Ingrese su Apellido</Label>
        </Border>

        <TextBox Name="Apellido" TextChanged="ValidarApellido"
            Grid.Row="6"  Height="28" Width="500" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20,0,0,0" VerticalContentAlignment="Center"/>
        <Label Name="ErrorApellido" Grid.Row="7" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Foreground="Red" Margin="160,0,0,0"></Label>

        <!--Dni-->
        <Border Grid.Row="8" Height="26" Width="500" Background="#91c0ff" HorizontalAlignment="Center" VerticalAlignment="Top" >
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" Foreground="White">Ingrese su Dni</Label>
        </Border>


        <TextBox  Name="Dni"  TextChanged="ValidarDni"
                 Grid.Row="9" Height="28" Width="500"  FontSize="13"  VerticalAlignment="Center" Padding="20,0,0,0" VerticalContentAlignment="Center"/>

        <Label Name="ErrorDni" Grid.Row="10" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="12" Foreground="Red" Margin="160,0,0,0"></Label>

        <!--Validation.ErrorTemplate="{StaticResource ValidationTemplate}"
         Style="{StaticResource TextBoxInError}">
            <TextBox.Text>
                <Binding Path="Dni" Source="{StaticResource Ods}"  UpdateSourceTrigger="PropertyChanged" >
                    <Binding.ValidationRules>
                        <valRule:DniRangeRule Min="1000000" Max="999999999"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>-->

        <Button Grid.Row="11" Grid.Column="0" Height="34" Width="200" Padding="5" HorizontalAlignment="Center" VerticalAlignment="Center"
               HorizontalContentAlignment="Center" Background="#4E87D5" Foreground="White" FontSize="18" FontWeight="Bold"
          Name="IniciarSimulacion" Click="IniciarSimulacion_Click">
            Iniciar Simulación
        </Button>
        <Button Grid.Row="13" Height="26" Grid.Column="0"  Margin="0,0,30,0" Padding="1" DockPanel.Dock="Right" Width="200" HorizontalAlignment="Right" Click="BrowseFolder"  VerticalAlignment="Center"
                VerticalContentAlignment="Center" Background="#4E87D5" Foreground="White" FontSize="15" >Seleccionar</Button>
        <Border Grid.Row="13" Height="35" Width="500" Margin="30,0,0,0" Background="#91c0ff" HorizontalAlignment="Left" VerticalAlignment="Center" >
            <Label Name="FolderPath" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" Foreground="White">Los resultados de la práctica se guardarán en...</Label>
        </Border>
    </Grid>
</Page>
